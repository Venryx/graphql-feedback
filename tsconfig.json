{
	"compilerOptions": {
		"rootDir": "Source",
		//"sourceMap": true, // commented; didn't work last time I tried, so keeping Dist folder cleaner
		"watch": true,
		//"module": "ES2015",
		"module": "ES2020",
		"moduleResolution": "node",
		"target": "ES2018",
		"jsx": "react",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true, // doesn't modify output, *or* own import code (it's just for type-checking)
		//"esModuleInterop": true, // doesn't modify output, only code for the stuff we import
		"useDefineForClassFields": true, // needed for mobx @observable
		"outDir": "Dist",
		"declaration": true,
		"declarationDir": "Dist",

		"alwaysStrict": true,
		"strictNullChecks": true
	},
	"include": [
		"Typings/**/*.d.ts",
		"Source/**/*.ts",
		"Source/**/*.tsx"
	],
	"compileOnSave": true
}